% layout 'default';
% title 'Ship';



<h2>Ship: <%= $ship->{registration}{name} %> (<%= $ship->{registration}{role} %>)</h2>
<p>
  Fuel: <%= $ship->{fuel}{current} %> / <%= $ship->{fuel}{capacity} %>
</p>
<p>
  <b>Nav</b>: Status: <%= $ship->{nav}{status} %>, System: <%= $ship->{nav}{waypointSymbol} %>.
</p>

% if ($ship->{nav}{status} eq 'IN_ORBIT' && $waypoint) {
<p>
  <b>Traits:</b>
  % for my $t (@{$waypoint->{traits}}) {
    % if ($t->{name} eq 'Shipyard') {
      <a href="/shipyard/<%= $ship->{nav}{waypointSymbol} %>">ðŸš€</a>
    % }
    <%= $t->{name}%>,
  % }
<br/>
  (<%= $waypoint->{type} %>)
</p>
% }