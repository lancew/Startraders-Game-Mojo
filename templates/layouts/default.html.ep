<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://unpkg.com/chota@latest">
    <script src="https://unpkg.com/feather-icons"></script>
  </head>
  <body>
    <div class="row">
      <div class="col">  </div>
      <div class="col">  </div>
      <div class="col">  </div>
    </div>
    <div class="row">
      <div class="col">  </div>
      <div class="col">
        <a href="/my/agent"><i data-feather="home">Home</i></a>
        % if ($queue_jobs) {
              Robot minion working
            <i data-feather="cpu"></i>
        % }
      </div>
      <div class="col"><a href="/game">:: ðŸš€ SpaceTraders ðŸš€ ::</a></div>
    </div>
    <div class="row">
      <div class="col">  </div>
      <div class="col">
        <%= content %>
      </div>
      <div class="col"> </div>
    </div>
    <div class="row">
       <div class="col">
         <p>
          % if ($self->config('dumper_mode')) {
